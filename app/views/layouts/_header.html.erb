<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
	<div class="container">
	  <% if current_user == nil %>
	    <%= link_to "studentathlete.me", root_path, id: "logo" %>
	  <% else %>
		<%= link_to "studentathlete.me", current_user, id: "logo" %>
	 <% end %>
	 <% if current_user %>
	  <nav>
		<%= form_tag users_path, method: :get, class: "navbar-search" do %>
		    <div class="input-prepend">
				<span class="add-on"><i class="icon-search icon-white"></i></span>
				<%= text_field_tag :query, params[:query], class: "search-query", placeholder: "find teammates" %>
		    	<%= submit_tag "Search", name: nil, class: "btn-primary" %>
			</div><!--/div.input-prepend-->
		<% end %>
	    <ul class="nav pull-right">
		
		  <div class="btn-group">
		  	<a class="btn btn-primary">
				<i class="icon-user icon-white"></i>
				<%= current_user.name %> 
			</a>
			<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
				<span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
				<li>
					<a href="<%= user_path(current_user) %>">
						<i class="icon-picture"></i> View Profile
					</a>
				</li>
				<li>
					<a href="<%= edit_user_path(current_user) %>">
						<i class="icon-pencil"></i> Edit Profile
					</a>
				</li>
				<li>
					<a href="<%= user_path(current_user) %>/followers">
						<i class="icon-thumbs-up"></i> My Fans
					</a>
				</li>
				<li>
					<a href="<%= user_path(current_user) %>/following">
						<i class="icon-user"></i> Friends &amp; Teammates
					</a>
				</li>
				<li class="divider"></li>
				<li>
					<a href="<%= signout_path %>"> 
						<i class="icon-minus-sign"></i> Sign out
					</a>
				</li>
			</ul>
		  </div><!--/.btn-group-->
	    <% else %>   
	      <ul class="nav pull-right">	
			<li><%= link_to 'Sign in', '/auth/facebook' %></li>
		  </ul>
	    <% end %>
	    </ul><!--/.nav.pull-right-->
	  </nav>
	</div><!--/.container-->
  </div><!--/.navbar-inner-->
</header><!--/.navbar.navbar-fixed-top-->


