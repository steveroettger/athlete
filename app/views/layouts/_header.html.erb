<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
	<div class="container">
	  <% if current_user == nil %>
	    <%= link_to "studentathlete.me", root_path, id: "logo" %>
	  <% else %>
		<%= link_to "studentathlete.me", current_user, id: "logo" %>
	 <% end %>
	 <% if current_user %>
	  <nav>
		<form class="navbar-search">
		  <div class="input-prepend">
			<span class="add-on"><i class="icon-search icon-white"></i></span>
		    <input type="text" class="search-query" placeholder="find teammates">
		  </div>
		</form>
	    <ul class="nav pull-right">
		
		  <div class="btn-group">
		  	<a class="btn btn-primary">
				<i class="icon-user icon-white"></i>
				<%= current_user.name %> 
			</a>
			<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
				<span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
				<li><%= link_to "View Profile", current_user %></li>
				<li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
				<li><%= link_to "Invite Teammates", '#' %></li>
				<li class="divider"></li>
				<li><%= link_to "Sign out", signout_path %></li>
			</ul>
		  </div><!--/.btn-group-->
	    <% else %>   
	      <ul class="nav pull-right">	
			<li><%= link_to 'Sign up', '#' %></li>
			<li><%= link_to 'Sign in', '/auth/facebook' %></li>
		  </ul>
	    <% end %>
	    </ul><!--/.nav.pull-right-->
	  </nav>
	</div><!--/.container-->
  </div><!--/.navbar-inner-->
</header><!--/.navbar.navbar-fixed-top-->


