<% provide(:title, "Edit #{current_user.name}") %> 
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
  <%= simple_form_for current_user, :html => { class: 'form-vertical' } do |f| %>
      <%= f.input :name %>
      <%= f.input :school_year, label: 'School Year', placeholder: 'i.e. Junior' %>
      <%= f.input :location, placeholder: 'i.e. Wilmington, DE' %>
      <%= f.input :high_school, label: 'High School', placeholder: 'i.e. Fallston High School' %>

      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>