<% provide(:title, 'Find Teammates &amp; Friends') %>
<section class="hero-unit hero-unit-gray">
  <div class="index-white">  
	<h1>Find Teammates &amp; Friends</h1>
  	<%= will_paginate @users %>
  	<ul class="users">
      <% @users.each do |user| %>
        <li>
          <% if user.profile_image? %>
		  	<%# link_to image_tag(user.profile_image), user %>
			<a href="/users/<%= user.username %>/#profileModal" role="button" data-toggle="modal">
				<img src="<%= user.profile_image %>" border="none" />
			</a>
		  <% else %>	
			<%# link_to default_avatar, user %>
			<a href="/users/<%= user.username %>/#profileModal" role="button" data-toggle="modal">
				<img src="/assets/avatar.gif" />
			</a>
		  <% end %>
		  <a href="#profileModal" role="button" data-toggle="modal"><%= user.name %></a>
		  <%# render 'follow_form' if signed_in? %>
        </li>
      <% end %>
  	</ul>
  	<%= will_paginate @users %>
	<%= render 'users/user_profile_modal' %>
  </div>
</section>

